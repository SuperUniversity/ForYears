@model FourYears.Areas.BookStoreAreas.ViewModels.ViewModel_BookInformation
@using FourYears.Areas.BookStoreAreas.ViewModels

@{
    ViewBag.Title = "Insert";
}

<div class="container">
    <h2>商品新增</h2>
    <hr />

    @using (Html.BeginForm("Insert", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(book => book.BookName, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(book => book.BookName, new { htmlAttributes = new { @class = "form-control", placeholder = "商品名稱" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(book => book.AuthorName, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10 row">
                <div class="col-sm-4">
                    @Html.EditorFor(book => book.AuthorName, new { htmlAttributes = new { @class = "form-control", placeholder = "作者" } })
                </div>
                <div class="col-sm-2">
                    <h4>找不到作者?</h4>
                </div>
                <div class="col-sm-4">
                    <a href="~/Category/Insert" class="btn btn-primary">新增作者</a>
                </div>
            </div>
        </div>

        @Html.Action("MainCategories_Partial")     //嵌入PartialView

        <div class="form-group">
            @Html.LabelFor(book => book.PublishDate, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(book => book.PublishDate, new { htmlAttributes = new { @class = "form-control", placeholder = "出版日期" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(book => book.PublishDate, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(book => book.PublishDate, new { htmlAttributes = new { @class = "form-control", placeholder = "出版日期" } })
            </div>
        </div>

    }

</div>