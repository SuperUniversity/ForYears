@model FourYears.Areas.BookStoreAreas.ViewModels.ViewModel_BookInformation

@{
                ViewBag.Title = "BookDetail";

                var commentList = new List<FourYears.Areas.BookStoreAreas.Models.BookItemCommet>();
                using (FourYears.Areas.BookStoreAreas.Models.superuniversityEntities4 db = new FourYears.Areas.BookStoreAreas.Models.superuniversityEntities4() )
                {
                    commentList = (from s in db.BookItemCommet
                                   where s.BookID == this.Model.BookID
                                   select s).ToList();
                }
            }



<div class="row">
    <div class="col-lg-2">

    </div>
    <div class="col-lg-8">
        <p style="font-family:'Microsoft JhengHei';font-weight:bold;font-size:24px"><span style="color:orangered">商品</span>簡介</p>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-7">
                    <div class="col-lg-12">
                        @if (Model.BytesImage1 != null)
            {
                            <div class="col-lg-8 padFix bigimg imageback" style="margin:10px">
                                <span class="photo_b">
                                    <img src="@Url.Action("GetBookImage1","Customer",new {id= ViewBag.bid })" style="width:350px;height:350px" />
                                </span>
                            </div>

                            if (Model.BytesImage2 != null)
                            {
                                <div class="col-lg-2 padFix bigimg imageback" style="margin:10px">
                                    <span class="photo_b">
                                        <img src="@Url.Action("GetBookImage2","Customer",new {id= ViewBag.bid })" style="width:165px;height:165px" />
                                    </span>
                                </div>
                            }
                            if (Model.BytesImage3 != null)
                            {
                                <div class="col-lg-2 padFix bigimg imageback" style="margin:10px">
                                    <span class="photo_b">
                                        <img src="@Url.Action("GetBookImage3","Customer",new {id= ViewBag.bid })" style="width:165px;height:165px" />
                                    </span>
                                </div>
                            }

                        }
                    </div>


                </div>
                <div class="col-lg-5">
                    <p style="color:	#842B00;font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:24px;">@Html.LabelFor(book => book.BookName) : @Html.DisplayFor(book => book.BookName)</p>
                    <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:20px;">@Html.LabelFor(book => book.AuthorName) : @Html.DisplayFor(book => book.AuthorName)</p>
                    <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:20px;">@Html.LabelFor(book => book.MainCategoryName) : @Html.DisplayFor(book => book.MainCategoryName)</p>
                    <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:20px;">@Html.LabelFor(book => book.SubCategoryName) : @Html.DisplayFor(book => book.SubCategoryName)</p>
                    <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:20px;">@Html.LabelFor(book => book.PublisherName) : @Html.DisplayFor(book => book.PublisherName)</p>
                    <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:20px;">@Html.LabelFor(book => book.PublishDate) : @Html.DisplayFor(book => book.PublishDate)</p>
                    <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:20px;">@Html.LabelFor(book => book.OnShelfDate) : @Html.DisplayFor(book => book.OnShelfDate)</p>
                    <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:20px;">@Html.LabelFor(book => book.Language) : @Html.DisplayFor(book => book.Language)</p>
                    <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:20px;">@Html.LabelFor(book => book.ListPrice) : @Html.DisplayFor(book => book.ListPrice)</p>
                    <p style="color:#FF5151;font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:20px;">@Html.LabelFor(book => book.SalePrice) : @Html.DisplayFor(book => book.SalePrice)</p>
                    <a style="font-size:larger;font-family:'Microsoft JhengHei'" href="@Url.Action("AddToCart", "Products",new {id=ViewBag.bid})" class="btn btn-danger"><span class="glyphicon glyphicon-shopping-cart"></span> 放入購物車</a>
                    <a style="font-size:larger;font-family:'Microsoft JhengHei'" href="@Url.Action("Browse", "Customer")" class="btn btn-success"><span class="glyphicon glyphicon-repeat"></span> 繼續去購物</a>

                
                </div>

            </div>



        </div>
        <div>
        </div>
        <hr />
        <br />
        <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:26px;">@Html.LabelFor(book => book.BookDescription)</p>
        <hr />
        <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:18px;">@Html.DisplayFor(book => book.BookDescription)</p>
        <hr />
        <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:26px;">@Html.LabelFor(book => book.AuthorDescription)</p>
        <hr />
        <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:18px;">@Html.DisplayFor(book => book.AuthorDescription)</p>
        <hr />
        <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:26px;">@Html.LabelFor(book => book.OtherImformation)</p>
        <hr />
        <p style="font-size:larger;font-family:'Microsoft JhengHei';font-weight:bold;font-size:18px;">@Html.DisplayFor(book => book.OtherImformation)</p>
    </div>

    <hr />
    <div>
        <div>
            @Html.Label("相關留言", new { })
            <hr />
        </div>

        <div>
            @using (Html.BeginForm("AddBookComment", "Customer", new { id = Model.BookID }, FormMethod.Post, new { }))
            {
                if (Request.Cookies["FullName"] != null)
                {
                    @Html.TextArea("Content", "", new { rows = "5", style = "width:1000px" })
                    <input type="submit" value="留言" class="btn btn-danger" style="margin-top:60px" />
                }
                else
                {
                    @Html.TextArea("Content", "", new { rows = "5", style = "width:1000px" })
                    @*<input type="url"  value="留言" class="btn btn-default" style="margin-top:60px" />*@
                    <a href="@Url.Action("CustomerLogin","Account",new { Area="BookStoreAreas"})" class="btn btn-danger" style="margin-top:60px">留言</a>
                }

            }
        </div>
        <div>
            @foreach (var comment in commentList)
            {
                <h4>@comment.CustomerName (@comment.CustomerNickName)：</h4>
                <span>@comment.BookCommet1</span>
                <p>(@comment.CreateDate)</p>
                <hr />
            }
        </div>
    </div>
    <div class="col-lg-2">

    </div>
</div>

