@model IEnumerable<FourYears.Areas.JobArea.Models.EmployerCompany>
@{
    ViewBag.Title = "廠商名單";
}
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <style>
        body {
            background-color: antiquewhite;
            padding-top: 15px;
            font-size: 12px;
        }

        .main {
            max-width: 320px;
            margin: 0 auto;
        }

        .login-or {
            position: relative;
            font-size: 18px;
            color: #aaa;
            margin-top: 10px;
            margin-bottom: 10px;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .span-or {
            display: block;
            position: absolute;
            left: 50%;
            top: -2px;
            margin-left: -25px;
            background-color: #fff;
            width: 50px;
            text-align: center;
        }

        .hr-or {
            background-color: #cdcdcd;
            height: 1px;
            margin-top: 0px !important;
            margin-bottom: 0px !important;
        }

        h3 {
            text-align: center;
            line-height: 300%;
        }
    </style>
}
@{
    if (ViewBag.Result != null)
    {
        @Html.Label("primary", (string)ViewBag.Result, new { @class = "text-primary" })
    }
}
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>編號</th>
            <th>公司名稱</th>
            <th>公司地址</th>
            <th>聯絡人</th>
            <th>聯絡電話</th>
            <th>聯絡信箱</th>
            <th>編輯</th>
            <th>刪除</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var EPC in Model)
        {
            <tr>
                <td>@Html.DisplayFor(e => EPC.CompanyID)</td>
                <td>@Html.DisplayFor(e => EPC.CompanyName)</td>
                <td>@Html.DisplayFor(e => EPC.CompanyAdress) </td>
                <td>@Html.DisplayFor(e => EPC.EmployerName) </td>
                <td>@Html.DisplayFor(e => EPC.EmployerPhone) </td>
                <td>@Html.DisplayFor(e => EPC.EmployerMail) </td>
                <td><a href="~/JobArea/Employer/Edit/@EPC.CompanyID" class="btn btn-info">編輯</a></td>
                <td><a href="~/JobArea/Employer/Delete/@EPC.CompanyID" class="btn btn-danger"> 刪除</a></td>
            </tr>
        }
    </tbody>
</table>

