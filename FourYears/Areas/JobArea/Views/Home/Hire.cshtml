@model FourYears.Areas.JobArea.Models.Job
@{
    ViewBag.Title = "主動應徵";
}
@section styles{
    <style>
        body {
            /*background-color: antiquewhite;*/
            padding-top: 15px;
            font-size: 12px;
        }

        .main {
            max-width: 320px;
            margin: 0 auto;
        }

        .login-or {
            position: relative;
            font-size: 18px;
            color: #aaa;
            margin-top: 10px;
            margin-bottom: 10px;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .span-or {
            display: block;
            position: absolute;
            left: 50%;
            top: -2px;
            margin-left: -25px;
            background-color: #fff;
            width: 50px;
            text-align: center;
        }

        .hr-or {
            background-color: #cdcdcd;
            height: 1px;
            margin-top: 0px !important;
            margin-bottom: 0px !important;
        }

        h3 {
            text-align: center;
            line-height: 300%;
        }

        #beautiful {
            text-align: center;
            line-height: 300%;
            font-weight: bold;
            font-family: 'Microsoft JhengHei';
        }

        #lookgood {
            text-align: center;
            line-height: 300%;
            width: 400px;
            font-size: 10px;
            font-weight: bold;
            font-family: 'Microsoft JhengHei';
        }
    </style>
}
@section scripts{
    <script>
        $("#close").on("click", function () {
            window.location.href="@Url.Action("Index","HomePage")";
        })
        //$("#email").

    </script>
    @if (TempData["message"] != null)
    {
        <script type="text/javascript">
                        var message = @Html.Raw(Json.Encode(TempData["message"]));
                        alert(message);
        </script>
    }
}
<h3 style="color:#b45c5c">主動應徵</h3>
<hr size="10" color="#ff8000" />
@using (Html.BeginForm("Hire", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-7">
            <div class="form-group">
                @Html.Label("應徵工作", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @{
                        var x = ViewBag.job;
                        foreach (var p in x.JBs)
                        {
                            <h6><a href="@Url.Action("Detail","Home",new { Area="JobArea",id= p.JobID})" class="text text-info">@p.JobName</a></h6>
                        }
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.Label("自我推薦信", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextArea("nothing", string.Format("您好，我叫{0}，近日得知貴公司在徵人，希望能有參加面試的機會，謝謝！", HttpUtility.UrlDecode(Request.Cookies["name"].Value)), new { style = "resize:none,width:1000px", @class = "form-control", rows = "10" })
                </div>
            </div>
            <div class="from-group">
                @Html.Label("信箱確認", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBox("nothing", "", new { placeholder = "請填入你的信箱", style = "width:400px" })
                </div>
            </div>
            <div class="col-lg-1"></div>
            <div class="col-lg-2">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" class="btn btn-warning" value="確認送出" />
                    </div>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <a class="btn btn-default" id="close">取消關閉</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
                        }
<div class="container">
    <ul class="breadcrumb barfont"></ul>
</div>
