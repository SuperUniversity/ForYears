@model IEnumerable<FourYears.Areas.JobArea.Models.Job>
@{
    ViewBag.Title = "工作管理";
}
@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <style>
        body {
            /*background-color: antiquewhite;*/
            padding-top: 15px;
            font-size: 12px;
        }

        .main {
            max-width: 320px;
            margin: 0 auto;
        }

        .login-or {
            position: relative;
            font-size: 18px;
            color: #aaa;
            margin-top: 10px;
            margin-bottom: 10px;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .span-or {
            display: block;
            position: absolute;
            left: 50%;
            top: -2px;
            margin-left: -25px;
            background-color: #fff;
            width: 50px;
            text-align: center;
        }

        .hr-or {
            background-color: #cdcdcd;
            height: 1px;
            margin-top: 0px !important;
            margin-bottom: 0px !important;
        }

        h3 {
            text-align: center;
            line-height: 300%;
        }
    </style>
}
@{
    if (ViewBag.Result != null)
    {
        @Html.Label("primary", (string)ViewBag.Result, new { @class = "text-primary" })
    }
}

<a href="~/JobArea/Job/Insert/@Request.Cookies["nameid"].Value" class="btn btn-info">新增工作</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>工作編號</th>
            <th>工作名稱</th>
            @*<th>編號</th>*@
            <th>可上班日</th>
            @*<th>工作時段</th>*@
            <th>時薪</th>
            @*<th>工作描述</th>*@
            <th>工作地點</th>
            <th>編輯</th>
            <th>刪除</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jb in Model)
        {
            <tr>
                <td>@Html.DisplayFor(j => jb.JobID)</td>
                <td>@Html.DisplayFor(j => jb.JobName)</td>
                @*<td>@Html.DisplayFor(j => jb.CompanyID)</td>*@
                <td>@Html.DisplayFor(j => jb.JobStartTime)</td>
                @{
                    if (jb.PayPerHour == 0)
                    {
                        <td>
                            @Html.DisplayName("面議")
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.DisplayFor(j => jb.PayPerHour)
                        </td>
                    }
                }
                <td>@Html.DisplayFor(j => jb.Workplace)</td>
                <td><a href="~/JobArea/Manager/JobEdit/@jb.JobID" class="btn btn-info">編輯</a></td>
                <td><a href="~/JobArea/Job/Delete/@jb.JobID" class="btn btn-danger"> 刪除</a></td>
            </tr>
                    }
    </tbody>
</table>

