@model IEnumerable<FourYears.Areas.Courses.ViewModel.UserCommentViewModel>

@{
    ViewBag.Title = "使用者評論一覽";
}

@*<div class="container">*@
    <h2>使用者評論一覽</h2>

    <table class="table">
        <tr>
            <th hidden="hidden">
                @Html.DisplayNameFor(model => model.User_CommentId)
            </th>
            <th hidden="hidden">
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NickName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th hidden="hidden">
                @Html.DisplayNameFor(model => model.CourseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastModified)
            </th>
            <th hidden="hidden">
                @Html.DisplayNameFor(model => model.CommentId)
            </th>
            <th width="300">
                @Html.DisplayNameFor(model => model.CommentString)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td hidden="hidden">
                    @Html.DisplayFor(modelItem => item.User_CommentId)
                </td>
                <td hidden="hidden">
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NickName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td hidden="hidden">
                    @Html.DisplayFor(modelItem => item.CourseId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td hidden="hidden">
                    @Html.DisplayFor(modelItem => item.CommentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentString)
                </td>
                <td>
                    @Html.ActionLink("刪除", "DeleteComment", new { userCommentId = item.User_CommentId })
                </td>
            </tr>
        }

    </table>
@*</div>*@

