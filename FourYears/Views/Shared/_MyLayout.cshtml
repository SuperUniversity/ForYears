<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - 肆 ‧ 年</title>
    <style>
        #footer1 {
            position: fixed;
            bottom: 0px;
            width: 100%;
            height: 50px;
        }

            
            
        #renderbody {
            margin-bottom: 60px;
            min-height: 100%;
        }
        #mainNav a{
            color: #ffffff;
            height: 40px;
            text-decoration-line:none;
        }
        #mainNav {
            background-color: #2c3e50;
        }

       #mainNav > div > div > button {
            color: white
        }
    </style>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    @*<link href="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-freelancer/3.3.7/css/freelancer.min.css" rel="stylesheet">*@
    @RenderSection("scriptsTop", false)
    @*<link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">*@
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    @RenderSection("styles", false)
</head>
<body>
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom" >
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll" id="selfNav"> 
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> 目錄 <i class="fa fa-bars"></i>
                </button>
                @Html.ActionLink("肆 ‧ 年","Index","Home",new { area = "" },new { @class= "navbar-brand" })
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse" >
                @*<ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li class="page-scroll">
                        <a href="#portfolio" style="color:white">模塊</a>
                    </li>
                    <li class="page-scroll">
                        <a href="#about" style="color:white">關於</a>
                    </li>
                    <li class="page-scroll">
                        <a href="#contact" style="color:white">聯絡我們</a>
                    </li>
                </ul>*@

                <ul class="nav navbar-nav navbar-right" id="ManagerUl" hidden="hidden">
                    <li hidden="hidden">@Html.ActionLink("帳號管理員", "Index", "AccountManager", new { area = "" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")


            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <section id="renderbody">

        @RenderBody()

    </section>

    <footer id="footer1" class="text-center">
        <div class="panel-footer" style="height: 50px;background-color: #2c3e50">
            <div class="container">
                <div class="row" style="margin-top:6px">
                    <div class="col-lg-12" style="color:white">
                        Copyright &copy; 肆 ‧ 年 2017
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-freelancer/3.3.7/js/freelancer.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script>
        //$(document).ready(function () {
        //    $("#selfUl").find("li:nth-child(1)").attr("hidden", "hidden")
        //})
        if (@User.IsInRole("Admin").ToString().ToLower())
        {
            $("#ManagerUl").removeAttr("hidden")
        }
    </script>
    @RenderSection("scripts", false)
</body>
</html>